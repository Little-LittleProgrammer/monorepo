{
    "extends": "@wuefront-configs/tsconfig/vue.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "#/*": ["types/*"]
        },
        "types": [
            "vite-plugin-pwa/client"
        ]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "types/*.d.ts",
        "build/**/*.ts",
        "build/**/*.d.ts",
        "node_modules/@wuefront/types/**/*.d.ts"
    ],
    "exclude": [
        "dist"
    ]
}
