{
    "extends": "@qmfront/configs/tsconfig/vue.json",
    "compilerOptions": {
        "isolatedModules": true,
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts", 
        "src/**/*.d.ts", 
        "src/**/*.tsx", 
        "src/**/*.vue",
        "types/*.ts",
        "node_modules/@qmfront/types/**/*.d.ts"
    ],
    "exclude": ["dist"]
}
