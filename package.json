{
    "name": "monorepo",
    "version": "0.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*",
        "docs/*",
        "configs/*"
    ],
    "scripts": {
        "build": "turbo run build",
        "build:lib": "turbo run build:lib",
        "dev": "turbo run dev --parallel",
        "lint": "turbo run lint"
    },
    "engines": {
        "npm": ">=7.0.0",
        "node": ">=16.0.0"
    },
    "dependencies": {
        "turbo": "^1.9.9",
        "typescript": "^5.0.4"
    },
    "devDependencies": {
        "@wuefront-configs/eslint": "workspace:*"
    },
    "pnpm": {
        "peerDependencyRules": {
            "ignoreMissing": [
                "@algolia/client-search",
                "@vue/composition-api"
            ]
        }
    }
}